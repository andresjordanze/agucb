<% title "Registrar equipo"%>
<div class="page-loader"></div>
<div class="l-wrapper">
<%= render 'layouts/header8'%>
  <div class="l-content-wrap" id="standard-content">
    <section>
    <div class="l-form-section l-section">
      <center>
      <!--<br><br><br>
      <a href="/futbol8"><img src="/img/logo1.png"></a><br><br>-->
      <h1>Registrar equipo</h1><br>
        <div class="col-xs-6 col-md-4">
        <%= form_for(@team) do |f| %>
            <div class="form-group">
              <%= f.text_field :name,:class=>"form-control", :placeholder=>"Nombre de equipo" %>
            </div>
            <div class="form-group">
              <%= f.text_field :login,:class=>"form-control", :placeholder=>"Login" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password,:class=>"form-control", :placeholder=>"Contraseña" %>
            </div>
            <p><%= link_to 'Cancelar', teams_path, :class=>"back-btn" %> <%= f.submit (@team.new_record? ? 'Registrar equipo' : 'Guardar cambios'), :class=>"first-btn" %></p>
        <% end %>
      </div>
      <div class="l-copyright text-center">
            © Asociacion de Graduados UCB 2014 - Todos los derechos reservados 
        </div>
        </center>
    </div>
    </section>
  </div>
</div>

