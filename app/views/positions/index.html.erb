<% title "Tabla de Posiciones"%>
<div class="page-loader"></div>
<div class="l-wrapper">
<%= render 'layouts/header8'%>
<section>
<div class="l-page-section l-section" id="page-section">
    <center>
    <div class="table-responsive">
    <table class="table table-hover">
    <br><h1><img src="/img/position.png" width="100"> Tabla de Posiciones</h1>
    <center>
    <tr class="info">
      <th><h6 align="center"><b>Lugar</b></h6></th>
      <th><h6 align="center"><b>Equipo</b></h6></th>
      <th><h6 align="center"><b>Partidos Jugados</b></h6></th>
      <th><h6 align="center"><b>Partidos Ganados</b></h6></th>
      <th><h6 align="center"><b>Partidos Empatados</b></h6></th>
      <th><h6 align="center"><b>Partidos Perdidos</b></h6></th>
      <th><h6 align="center"><b>Goles</b></h6></th>
      <th><h6 align="center"><b>Puntos</b></h6></th>
    </tr>
    <%n=0%>
    <% @teams.each do |team| %>
      <%n=n+1%>
      <tr class="warning">
        <td><h6 align="center"><%= n %></h6></td>
        <td><h6 align="center"><%= team.name %></h6></td>
        <td><h6 align="center"><%= team.p_jug %></h6></td>
        <td><h6 align="center"><%= team.p_gan %></h6></td>
        <td><h6 align="center"><%= team.p_emp %></h6></td>
        <td><h6 align="center"><%= team.p_per %></h6></td>
        <td><h6 align="center"><%= team.goles %></h6></td>
        <td><h6 align="center"><%= team.position %></h6></td>
      </tr>
    <% end %>
    </center>
    </table>
    </div>/
    </center>
</div>
</section>
<br>
<%= render 'layouts/footer8'%>
<!--%= link_to 'New Scorer', new_scorer_path %-->
</div>