<style>
  input:focus {
    background-color:#FAFFBD;
    color: black;
  }
</style>

<div class="col-xs-6 col-md-4">
<%= form_for(@associated) do |f| %>
  <% if @associated.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@associated.errors.count, "error") %> prohibited this associated from being saved:</h2>
      <ul>
      <% @associated.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-6">
    <div class="field">
      <%= f.text_field :name, :class=>"form-control", :placeholder=>"Nombres", :autocomplete=>'off', :title =>'Nombre' %>
    </div>
  </div><!-- col-lg-6 -->
  <div class="col-lg-6">
    <div class="field">
      <%= f.text_field :lastname, :class=>"form-control", :placeholder=>"Apellidos", :autocomplete=>'off', :title =>'Apellidos' %>
    </div>
  </div><!-- col-lg-6 -->
  <div class="col-lg-12">
      <div class="field">
        <br><%= f.text_field :address, :class=>"form-control", :placeholder=>"Dirección", :autocomplete=>'off', :title =>'Dirección' %><br>
    </div>
  </div>

  <legend>Datos de Contacto</legend>
  <div class="col-lg-6">
    <div class="field">
      <%= f.text_field :phone, :class=>"form-control", :placeholder=>"Teléfono fijo", :autocomplete=>'off', :title => '' %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="field">
      <%= f.text_field :cellphone, :class=>"form-control", :placeholder=>"Celular", :autocomplete=>'off' %>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="field">
      <br><%= f.text_field :email, :class=>"form-control", :placeholder=>"Correo Electrónico", :autocomplete=>'off' %><br>
    </div>
  </div>
  
  <legend>Datos Académicos</legend>
  <div class="col-lg-6">
    <div class="field">
      <%= f.text_field :universityDegree, :class=>"form-control", :placeholder=>"Título Universitario", :autocomplete=>'off' %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="field">
      <%= f.text_field :universityCareer, :class=>"form-control", :placeholder=>"Carrera Universitaria", :autocomplete=>'off' %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="field">
      <br><%= f.text_field :yearDegree, :class=>"form-control", :placeholder=>"Año de graduación", :autocomplete=>'off' %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="field">
      <br><%= f.text_field :city, :class=>"form-control", :placeholder=>"Ciudad", :autocomplete=>'off', :title => "Ciudad" %><br>
    </div>
  </div>
  <div class="btn-group btn-group-lg">
    <br><%= f.submit :class=>"third-btn" %>
  </div>
<% end %>
</div>

