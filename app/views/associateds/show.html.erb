<%= render 'layouts/header_menu'%>

<% title "Asociado" %>
<section>
  <div class="l-form-section l-section" style="margin-top: 0px;">
    <center>
      <h1>Asociado</h1><br>
      <p id="notice"><%= notice %></p>

      <div class="col-xs-6 col-md-4">
        
        <div class="col-lg-6">
          <div class="field">
            <input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.name %>" title="Nombre" readonly/>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="field">
            <input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.lastname %>" title="Apellidos" readonly />
          </div>
        </div>
        <div class="col-lg-12">
          <div class="field">
            <br><input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.address %>" title="Direccíón" readonly /><br>
          </div>
        </div>

        <legend>Datos de Contacto</legend>
        <div class="col-lg-6">
          <div class="field">
            <input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.cellphone %>" title="Celular" readonly />
          </div>
        </div>
        <div class="col-lg-6">
          <div class="field">
            <input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.phone %>" title="Teléfono fijo" readonly />
          </div>
        </div>
        <div class="col-lg-12">
          <div class="field">
            <br><input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.email %>" title="Correo electrónico" readonly /><br>
          </div>
        </div>

        <legend>Datos Académicos</legend>
        <div class="col-lg-6">
          <div class="field">
            <input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.universityCareer %>" title="Carrera" readonly />
          </div>
        </div>
        <div class="col-lg-6">
          <div class="field">
            <input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.universityDegree %>" title="Título" readonly />
          </div>
        </div>
        <div class="col-lg-6">
          <div class="field">
            <br><input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.city %>" title="Ciudad" readonly />
          </div>
        </div>
        <div class="col-lg-6">
          <div class="field">
            <br><input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @associated.yearDegree %>" title="Año de gradiación" readonly /><br><br>
          </div>
        </div>
        <div class="field">
          <%= link_to 'Editar', edit_associated_path(@associated), :class=>"second-btn" %>
          <%= link_to 'Atrás', associateds_path, :class=>"back-btn" %><br><br>
        </div>
      </div>

      <% if current_user && current_user.userType == 'admin' %>
          <h1>Cuenta de Asociado</h1><br>
          <% if @associated.userId != nil %>
            <% @user = User.find(@associated.userId) %>
            <div class="col-xs-6 col-md-4">
              <div class="field">
                <label for="associated_name" style="color:green">Nombre de usuario: </label><br>
                <input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @user.username %>" title="Nombre De Usuario" readonly/>
              </div>
              <div class="field">
                <label for="associated_name" style="color:green">Correo: </label><br>
                <input class="form-control" type="text" style="background-color:#FAFFBD; color: black;" value="<%= @user.email %>" title="Correo Electrónico" readonly />
              </div><br>
            </div>
          <% else %>
            <h4><a class="btn second-btn" href="/users/new_user_for_associated/<%= @associated.id %>">Crear Cuenta de Associado</a></h4>
          <% end %>

      <% end %>

      
      
    </center>
    <div class="l-copyright text-center">
      © Asociacion de Graduados UCB 2014 - Todos los derechos reservados 
    </div>
  </div>
</section>