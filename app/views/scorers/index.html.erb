<% title "Tabla de Goleadores"%>
<div class="page-loader"></div>
<div class="l-wrapper">
<%= render 'layouts/header8'%>
<section>
<div class="l-page-section l-section" id="page-section">
    <center>
    <div class="table-responsive">
    <table class="table table-hover">
    <br><h1><img src="/img/ball1.png" width="100"> Tabla de Goleadores por partido</h1>
    <center>
    <tr class="warning">
      <th><h6 align="center"><b>Jugador</b></h5></th>
      <th><h6 align="center"><b>Partido</b></h5></th>
      <th><h6 align="center"><b>Equipo</b></h5></th>
      <th><h6 align="center"><b>Goles</b></h5></th>
      <th><h6 align="center"><b>Numero</b></h6></th>
    </tr>

    <% @scorers.each do |scorer| %>
      <tr class="info">
        <td><h6 align="center"><%= Player.find(scorer.player_id).full_name %></h6></td>
        <td><h6 align="center"><%= Match.find(scorer.match_id).teams %></h6></td>
        <td><h6 align="center"><%= Team.find(scorer.team_id).name %></h6></td>
        <td>
          <h6 align="center"><%n=0%>
            <% while  n <scorer.goals %>
              <img src="/img/ball.png" width="20">
              <%n=n+1%>
            <%end%>
          </h6>
        </td>
        <td><h6 align="center"><%= scorer.goals %></h6></td>
        <!--td><h6><%= link_to 'Show', scorer %></td>
        <td><h6><%= link_to 'Edit', edit_scorer_path(scorer) %></td>
        <td><h6><%= link_to 'Destroy', scorer, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
      </tr>
    <% end %>
    </center>
    </table>
    </div>/
    </center>
</div>
</section>
<br>
<%= render 'layouts/footer8'%>
<!--%= link_to 'New Scorer', new_scorer_path %-->
</div>