<% title "Iniciar Sesión" %>
<div class="page-loader"></div> 
<div class="l-wrapper">
	<div class="l-content-wrap" id="standard-content">
	<div class="clearfix"></div>
		<section>
		<div class="l-contactus-section l-section">
			<center>
			<br><br><br>
			<a href="/agucb"><img src="/img/logo.png"></a>  |  <a href="/futbol8"><img src="/img/logo1.png"></a><br><br>
			<p>No tienes una cuenta? <%= link_to "Regístrate", signup_path, :class=>"btncto" %></p>
	    	<div class="col-xs-6 col-md-4">
				<%= form_tag sessions_path do %>
		  			<div class="form-group">
		    			<%= text_field_tag :login, params[:login],:class=>"form-control", :placeholder=>"Nombre de usuario, Correo Electrónico, Equipo" %>
		 			</div>
		  			<div class="form-group">
		   				<%= password_field_tag :password,params[:password],:class=>"form-control", :placeholder=>"Contraseña" %>
		  			</div>
		  			<p><%= submit_tag "Iniciar sesión" , :class=>"first-btn"%></p>
				<% end %>
			</div>
			<div class="l-copyright text-center">
	        	Copyright 2014 @agucb.com
	    	</div>
	    	</center>
		</div>
		</section>
	</div>
</div>