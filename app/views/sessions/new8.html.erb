<div class="page-loader"></div>
<div class="l-wrapper">
    <div class="l-content-wrap" id="standard-content">
        <section>
        <div class="l-contactus-section l-section">
            <center>
                <img src="/img/logo1.png"><br><br>
            </center>
            <div class="container">
                <center>
                <form class="form-signin" role="form">
                <%= form_for sessions_path do |f|%>
                <h4 class="form-signin-heading">Iniciar sesión</h4>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <%= f.text_field :login, :class=>"form-control", :placeholder=>"Login equipo"%></br>
                            <%= f.password_field :password, :class=>"form-control", :placeholder=>"Contraseña"%><br>
                            <%= f.submit "Ingresar" , :class=>"form-button"%><br><br>
                            Tu equipo no tiene una cuenta? <%= link_to "Registra tu equipo aqui", "/teams/new", :class=>"btn btn-xs btn-default"%>
                        </div>
                    </div>
                <% end %>
                </form>
                </center>
            </div> <!-- /container -->

            <div class="l-copyright text-center">
              Copyright 2014 @agucb.com
            </div><!-- l-copyright -->

        </div><!-- l-contactus-section -->
        </section>
    </div><!-- l-content-wrap -->
</div><!-- l-wrapper -->