<div class="col-xs-6 col-md-4">
<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, :style=>"color:green"%><br>
    <%= f.text_field :name, :class=>"form-control", :placeholder=>"Nombre" %>
  </div>
  <div class="field">
    <%= f.label :description, :style=>"color:green" %><br>
    <%= f.text_field :description, :class=>"form-control", :placeholder=>"Descripción" %>
  </div>
  <div class="field">
    <%= f.label :location, :style=>"color:green" %><br>
    <%= f.text_field :location, :class=>"form-control", :placeholder=>"Ubicación" %>
  </div>
  <div class="form-group">
    <%= f.file_field :photo %>
  </div>
  <div class="btn-group btn-group-lg">
    <%= f.submit :class=>"third-btn" %>
  </div>
<% end %>
</div>


